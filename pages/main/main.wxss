.areaSelectTitle{
  font-weight: bold;
}
.isRuleShow {
  display: block;
}

.isRuleHide {
  display: none;
}

.area {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}

.areaContent {
  width: 100%;
  min-height: 600rpx;
  background: #fff;
}

.ruleHide {
  height: 60rpx !important;
  width: 60rpx !important;
  position: absolute;
  top: -9rpx;
  right: -9rpx;
}

.areaSelectTitle{
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.areas{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 10rpx;
}
.areaTv{
  background-color: #f9f9f9;
  display: inline-block;
  color: #333;
  padding: 10rpx 20rpx;
