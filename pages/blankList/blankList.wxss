/* pages/blankList/blankList.wxss */
@import "../../style/main.wxss";
@import "../../style/icon.wxss";

.cu-list.menu-avatar > .cu-item::after {
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  border-bottom: 1rpx solid #ddd;
  border-radius: inherit;
  content: " ";
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
}

.cu-list.menu-avatar > .cu-item .action {
  width: 120rpx;
  text-align: center;
}
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
