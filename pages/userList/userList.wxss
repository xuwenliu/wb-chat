.item{
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.item .header_img{
  width: 130rpx;
  height: 130rpx;
}
.item .header_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.item .userInfo{
  flex: 1;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.item .userInfo .title{
  font-size: 36rpx;
}
.item .userInfo .attention_no{
  font-size: 30rpx;
  color: #666;
  padding-top: 30rpx;
}
.item .attention .btn{
  font-size: 30rpx;
  padding: 12rpx 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}
.item .attention .btn.active{
  border: 1rpx solid #EB9001;
  background: #EB9001;
  color: #fff;
}