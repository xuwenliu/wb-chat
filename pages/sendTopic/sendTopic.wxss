.page {
  padding: 20px;
  background: #fff;
}

.text {
  width: 100%;
  min-height: 100rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  padding: 10rpx;
}

.image_content{
  display: flex;
  flex-wrap: wrap;
}

.image_item{
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.upload, .moment {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f3f3f3;
  position: relative;
}

.upload .upload_img{
  width: 70rpx;
  height: 70rpx;
}

.moment .moment_img{
  width: 100%;
  height: 100%;
}
.moment .delete{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
}

/* 分类 */

.classify{
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
  font-size: 32rpx;
  color: #666;
}

.classify .label{
  width: 200rpx;
  text-align: left;
}
.classify .classifyPick{
  padding: 20rpx 25rpx;
  flex: 1;
  text-align: right;
  position: relative;
}
.classify .classifyPick:after{
  content: '';
  display: block;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -6rpx;
  width: 0;
  height: 0;
  border: solid #666;
  border-width: 0 1rpx 1rpx 0;
  padding: 8rpx;
  transform: rotate(-45deg)
}

button:after {
  border: none;
}

.page button {
  margin-top: 50rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 4rpx;
  background: #EB9001;
  color: #fff;
}
.location{
  display: flex;
  padding: 10rpx 0;
  margin-top: 50rpx;
  border-top: 1rpx solid #f3f3f3;
  align-items: center;
  color: #666;
}
.location .right{
  flex: 1;
  text-align: right;
}